<!DOCTYPE html>
<html>

<head>
    <title>@VietGIS.Infrastructure.GlobalConfiguration.ApplicationDescription</title>
    <meta http-equiv="Content-type" content="text/html;charset=UTF-8">
    <meta name="description" content="@VietGIS.Infrastructure.GlobalConfiguration.ApplicationDescription" />
    <meta name="keywords" content="Open GIS">
    <meta name="author" content="Open GIS">
    <meta name="robots" content="index,follow">
    <meta name="SKYPE_TOOLBAR" content="SKYPE_TOOLBAR_PARSER_COMPATIBLE">
    <meta name="format-detection" content="telephone=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- META FOR FACEBOOK -->
    <meta property="og:site_name" content="@GlobalConfiguration.CDNUrl" />
    <meta property="og:rich_attachment" content="true" />
    <meta property="og:type" content="article" />
    <meta property="og:url" itemprop="url" content="@GlobalConfiguration.CDNUrl" />
    <meta property="og:image" itemprop="thumbnailUrl" content="" />
    <meta property="og:image:width" content="200" />
    <meta property="og:image:height" content="200" />
    <meta content="@VietGIS.Infrastructure.GlobalConfiguration.ApplicationDescription" property="og:title" />
    <meta content="@VietGIS.Infrastructure.GlobalConfiguration.ApplicationDescription" property="og:description" />
    <!-- END META FOR FACEBOOK -->
    <!-- Twitter Card -->
    <meta name="twitter:card" value="summary" />
    <meta name="twitter:url" content="@GlobalConfiguration.CDNUrl" />
    <meta name="twitter:title" content="@VietGIS.Infrastructure.GlobalConfiguration.ApplicationDescription" />
    <meta name="twitter:description" content="@VietGIS.Infrastructure.GlobalConfiguration.ApplicationDescription" />
    <meta property="og:image" itemprop="thumbnailUrl" content="" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
